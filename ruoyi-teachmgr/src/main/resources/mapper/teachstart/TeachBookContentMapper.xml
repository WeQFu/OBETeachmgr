<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.teachmgr.teachstart.mapper.TeachBookContentMapper">
    
    <resultMap type="TeachBookContent" id="TeachBookContentResult">
        <result property="bookChapterId"    column="book_chapter_id"    />
        <result property="bookChapterPid"    column="book_chapter_pid"    />
        <result property="ancestors"    column="ancestors"    />
        <result property="bookId"    column="book_id"    />
        <result property="bookName"    column="book_name"    />
        <result property="chapterName"    column="chapter_name"    />
        <result property="chapterDescribe"    column="chapter_describe"    />
        <result property="orderNum"    column="order_num"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectTeachBookContentVo">
        select book_chapter_id, book_chapter_pid, ancestors, book_id, book_name, chapter_name, chapter_describe, order_num, del_flag, create_by, create_time, update_by, update_time, remark from teach_book_content
    </sql>

    <select id="selectTeachBookContentList" parameterType="TeachBookContent" resultMap="TeachBookContentResult">
        <include refid="selectTeachBookContentVo"/>
        <where>  
            <if test="bookChapterPid != null "> and book_chapter_pid = #{bookChapterPid}</if>
            <if test="ancestors != null  and ancestors != ''"> and ancestors = #{ancestors}</if>
            <if test="bookId != null "> and book_id = #{bookId}</if>
            <if test="bookName != null  and bookName != ''"> and book_name like concat('%', #{bookName}, '%')</if>
            <if test="chapterName != null  and chapterName != ''"> and chapter_name like concat('%', #{chapterName}, '%')</if>
            <if test="chapterDescribe != null  and chapterDescribe != ''"> and chapter_describe = #{chapterDescribe}</if>
            <if test="orderNum != null "> and order_num = #{orderNum}</if>
        </where>
    </select>
    
    <select id="selectTeachBookContentByBookChapterId" parameterType="Long" resultMap="TeachBookContentResult">
        <include refid="selectTeachBookContentVo"/>
        where book_chapter_id = #{bookChapterId}
    </select>
        
    <insert id="insertTeachBookContent" parameterType="TeachBookContent" useGeneratedKeys="true" keyProperty="bookChapterId">
        insert into teach_book_content
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="bookChapterPid != null">book_chapter_pid,</if>
            <if test="ancestors != null">ancestors,</if>
            <if test="bookId != null">book_id,</if>
            <if test="bookName != null">book_name,</if>
            <if test="chapterName != null">chapter_name,</if>
            <if test="chapterDescribe != null">chapter_describe,</if>
            <if test="orderNum != null">order_num,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="bookChapterPid != null">#{bookChapterPid},</if>
            <if test="ancestors != null">#{ancestors},</if>
            <if test="bookId != null">#{bookId},</if>
            <if test="bookName != null">#{bookName},</if>
            <if test="chapterName != null">#{chapterName},</if>
            <if test="chapterDescribe != null">#{chapterDescribe},</if>
            <if test="orderNum != null">#{orderNum},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateTeachBookContent" parameterType="TeachBookContent">
        update teach_book_content
        <trim prefix="SET" suffixOverrides=",">
            <if test="bookChapterPid != null">book_chapter_pid = #{bookChapterPid},</if>
            <if test="ancestors != null">ancestors = #{ancestors},</if>
            <if test="bookId != null">book_id = #{bookId},</if>
            <if test="bookName != null">book_name = #{bookName},</if>
            <if test="chapterName != null">chapter_name = #{chapterName},</if>
            <if test="chapterDescribe != null">chapter_describe = #{chapterDescribe},</if>
            <if test="orderNum != null">order_num = #{orderNum},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where book_chapter_id = #{bookChapterId}
    </update>

    <delete id="deleteTeachBookContentByBookChapterId" parameterType="Long">
        delete from teach_book_content where book_chapter_id = #{bookChapterId}
    </delete>

    <delete id="deleteTeachBookContentByBookChapterIds" parameterType="String">
        delete from teach_book_content where book_chapter_id in 
        <foreach item="bookChapterId" collection="array" open="(" separator="," close=")">
            #{bookChapterId}
        </foreach>
    </delete>

    <select id="hasChildByBookChapterId" parameterType="Long" resultType="int">
        select count(1) from teach_book_content
        where del_flag = '0' and bookChapterPid = #{hasChildByBookChapterId} limit 1
    </select>
</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.teachmgr.teachstart.mapper.TeachBookMapper">
    
    <resultMap type="TeachBook" id="TeachBookResult">
        <result property="bookId"    column="book_id"    />
        <result property="bookName"    column="book_name"    />
        <result property="bookPublisher"    column="book_publisher"    />
        <result property="bookIsbn"    column="book_isbn"    />
        <result property="publishTime"    column="publish_time"    />
        <result property="bookVersion"    column="book_version"    />
        <result property="bookAuthor"    column="book_author"    />
        <result property="bookIntroduce"    column="book_introduce"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectTeachBookVo">
        select book_id, book_name, book_publisher, book_isbn, publish_time, book_version, book_author, book_introduce, del_flag, create_by, create_time, update_by, update_time, remark from teach_book
    </sql>

    <select id="selectTeachBookList" parameterType="TeachBook" resultMap="TeachBookResult">
        <include refid="selectTeachBookVo"/>
        <where>  
            <if test="bookName != null  and bookName != ''"> and book_name like concat('%', #{bookName}, '%')</if>
            <if test="bookPublisher != null  and bookPublisher != ''"> and book_publisher = #{bookPublisher}</if>
            <if test="bookIsbn != null  and bookIsbn != ''"> and book_isbn = #{bookIsbn}</if>
            <if test="publishTime != null "> and publish_time = #{publishTime}</if>
            <if test="bookVersion != null  and bookVersion != ''"> and book_version = #{bookVersion}</if>
            <if test="bookAuthor != null  and bookAuthor != ''"> and book_author = #{bookAuthor}</if>
            <if test="bookIntroduce != null  and bookIntroduce != ''"> and book_introduce = #{bookIntroduce}</if>
        </where>
    </select>
    
    <select id="selectTeachBookByBookId" parameterType="Long" resultMap="TeachBookResult">
        <include refid="selectTeachBookVo"/>
        where book_id = #{bookId}
    </select>
        
    <insert id="insertTeachBook" parameterType="TeachBook" useGeneratedKeys="true" keyProperty="bookId">
        insert into teach_book
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="bookName != null">book_name,</if>
            <if test="bookPublisher != null">book_publisher,</if>
            <if test="bookIsbn != null">book_isbn,</if>
            <if test="publishTime != null">publish_time,</if>
            <if test="bookVersion != null">book_version,</if>
            <if test="bookAuthor != null">book_author,</if>
            <if test="bookIntroduce != null">book_introduce,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="bookName != null">#{bookName},</if>
            <if test="bookPublisher != null">#{bookPublisher},</if>
            <if test="bookIsbn != null">#{bookIsbn},</if>
            <if test="publishTime != null">#{publishTime},</if>
            <if test="bookVersion != null">#{bookVersion},</if>
            <if test="bookAuthor != null">#{bookAuthor},</if>
            <if test="bookIntroduce != null">#{bookIntroduce},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateTeachBook" parameterType="TeachBook">
        update teach_book
        <trim prefix="SET" suffixOverrides=",">
            <if test="bookName != null">book_name = #{bookName},</if>
            <if test="bookPublisher != null">book_publisher = #{bookPublisher},</if>
            <if test="bookIsbn != null">book_isbn = #{bookIsbn},</if>
            <if test="publishTime != null">publish_time = #{publishTime},</if>
            <if test="bookVersion != null">book_version = #{bookVersion},</if>
            <if test="bookAuthor != null">book_author = #{bookAuthor},</if>
            <if test="bookIntroduce != null">book_introduce = #{bookIntroduce},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where book_id = #{bookId}
    </update>

    <delete id="deleteTeachBookByBookId" parameterType="Long">
        delete from teach_book where book_id = #{bookId}
    </delete>

    <delete id="deleteTeachBookByBookIds" parameterType="String">
        delete from teach_book where book_id in 
        <foreach item="bookId" collection="array" open="(" separator="," close=")">
            #{bookId}
        </foreach>
    </delete>
</mapper>
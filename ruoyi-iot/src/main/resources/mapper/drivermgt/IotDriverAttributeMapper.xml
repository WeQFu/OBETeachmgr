<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.iotmgr.drivermgt.mapper.IotDriverAttributeMapper">
    
    <resultMap type="IotDriverAttribute" id="IotDriverAttributeResult">
        <result property="driverAttributeId"    column="driver_attribute_id"    />
        <result property="displayName"    column="display_name"    />
        <result property="attributeName"    column="attribute_name"    />
        <result property="type"    column="type"    />
        <result property="value"    column="value"    />
        <result property="driverId"    column="driver_id"    />
        <result property="description"    column="description"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="tenant"    column="tenant"    />
        <result property="deleted"    column="deleted"    />
    </resultMap>

    <sql id="selectIotDriverAttributeVo">
        select driver_attribute_id, display_name, attribute_name, type, value, driver_id, description, create_time, update_time, tenant, deleted from iot_driver_attribute
    </sql>

    <select id="selectIotDriverAttributeList" parameterType="IotDriverAttribute" resultMap="IotDriverAttributeResult">
        <include refid="selectIotDriverAttributeVo"/>
        <where>  
            <if test="displayName != null  and displayName != ''"> and display_name like concat('%', #{displayName}, '%')</if>
            <if test="attributeName != null  and attributeName != ''"> and attribute_name like concat('%', #{attributeName}, '%')</if>
            <if test="type != null  and type != ''"> and type = #{type}</if>
            <if test="value != null  and value != ''"> and value = #{value}</if>
            <if test="driverId != null "> and driver_id = #{driverId}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="tenant != null  and tenant != ''"> and tenant = #{tenant}</if>
            <if test="deleted != null "> and deleted = #{deleted}</if>
        </where>
    </select>
    
    <select id="selectIotDriverAttributeByDriverAttributeId" parameterType="Long" resultMap="IotDriverAttributeResult">
        <include refid="selectIotDriverAttributeVo"/>
        where driver_attribute_id = #{driverAttributeId}
    </select>
        
    <insert id="insertIotDriverAttribute" parameterType="IotDriverAttribute" useGeneratedKeys="true" keyProperty="driverAttributeId">
        insert into iot_driver_attribute
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="displayName != null and displayName != ''">display_name,</if>
            <if test="attributeName != null and attributeName != ''">attribute_name,</if>
            <if test="type != null and type != ''">type,</if>
            <if test="value != null and value != ''">value,</if>
            <if test="driverId != null">driver_id,</if>
            <if test="description != null">description,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="tenant != null and tenant != ''">tenant,</if>
            <if test="deleted != null">deleted,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="displayName != null and displayName != ''">#{displayName},</if>
            <if test="attributeName != null and attributeName != ''">#{attributeName},</if>
            <if test="type != null and type != ''">#{type},</if>
            <if test="value != null and value != ''">#{value},</if>
            <if test="driverId != null">#{driverId},</if>
            <if test="description != null">#{description},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="tenant != null and tenant != ''">#{tenant},</if>
            <if test="deleted != null">#{deleted},</if>
         </trim>
    </insert>

    <update id="updateIotDriverAttribute" parameterType="IotDriverAttribute">
        update iot_driver_attribute
        <trim prefix="SET" suffixOverrides=",">
            <if test="displayName != null and displayName != ''">display_name = #{displayName},</if>
            <if test="attributeName != null and attributeName != ''">attribute_name = #{attributeName},</if>
            <if test="type != null and type != ''">type = #{type},</if>
            <if test="value != null and value != ''">value = #{value},</if>
            <if test="driverId != null">driver_id = #{driverId},</if>
            <if test="description != null">description = #{description},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="tenant != null and tenant != ''">tenant = #{tenant},</if>
            <if test="deleted != null">deleted = #{deleted},</if>
        </trim>
        where driver_attribute_id = #{driverAttributeId}
    </update>

    <delete id="deleteIotDriverAttributeByDriverAttributeId" parameterType="Long">
        delete from iot_driver_attribute where driver_attribute_id = #{driverAttributeId}
    </delete>

    <delete id="deleteIotDriverAttributeByDriverAttributeIds" parameterType="String">
        delete from iot_driver_attribute where driver_attribute_id in 
        <foreach item="driverAttributeId" collection="array" open="(" separator="," close=")">
            #{driverAttributeId}
        </foreach>
    </delete>
</mapper>
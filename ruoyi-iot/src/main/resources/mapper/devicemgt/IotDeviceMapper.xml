<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.iotmgr.devicemgt.mapper.IotDeviceMapper">
    
    <resultMap type="IotDevice" id="IotDeviceResult">
        <result property="deviceId"    column="device_id"    />
        <result property="deviceName"    column="device_name"    />
        <result property="deviceNo"    column="device_no"    />
        <result property="deviceArea"    column="device_area"    />
        <result property="installTime"    column="install_time"    />
        <result property="deviceMaker"    column="device_maker"    />
        <result property="deviceIntroduce"    column="device_introduce"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectIotDeviceVo">
        select device_id, device_name, device_no, device_area, install_time, device_maker, device_introduce, del_flag, create_by, create_time, update_by, update_time, remark from iot_device
    </sql>

    <select id="selectIotDeviceList" parameterType="IotDevice" resultMap="IotDeviceResult">
        <include refid="selectIotDeviceVo"/>
        <where>  
            <if test="deviceName != null  and deviceName != ''"> and device_name like concat('%', #{deviceName}, '%')</if>
            <if test="deviceNo != null  and deviceNo != ''"> and device_no = #{deviceNo}</if>
            <if test="deviceArea != null  and deviceArea != ''"> and device_area = #{deviceArea}</if>
            <if test="installTime != null "> and install_time = #{installTime}</if>
            <if test="deviceMaker != null  and deviceMaker != ''"> and device_maker = #{deviceMaker}</if>
            <if test="deviceIntroduce != null  and deviceIntroduce != ''"> and device_introduce = #{deviceIntroduce}</if>
        </where>
    </select>
    
    <select id="selectIotDeviceByDeviceId" parameterType="Long" resultMap="IotDeviceResult">
        <include refid="selectIotDeviceVo"/>
        where device_id = #{deviceId}
    </select>
        
    <insert id="insertIotDevice" parameterType="IotDevice" useGeneratedKeys="true" keyProperty="deviceId">
        insert into iot_device
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="deviceName != null">device_name,</if>
            <if test="deviceNo != null">device_no,</if>
            <if test="deviceArea != null">device_area,</if>
            <if test="installTime != null">install_time,</if>
            <if test="deviceMaker != null">device_maker,</if>
            <if test="deviceIntroduce != null">device_introduce,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="deviceName != null">#{deviceName},</if>
            <if test="deviceNo != null">#{deviceNo},</if>
            <if test="deviceArea != null">#{deviceArea},</if>
            <if test="installTime != null">#{installTime},</if>
            <if test="deviceMaker != null">#{deviceMaker},</if>
            <if test="deviceIntroduce != null">#{deviceIntroduce},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateIotDevice" parameterType="IotDevice">
        update iot_device
        <trim prefix="SET" suffixOverrides=",">
            <if test="deviceName != null">device_name = #{deviceName},</if>
            <if test="deviceNo != null">device_no = #{deviceNo},</if>
            <if test="deviceArea != null">device_area = #{deviceArea},</if>
            <if test="installTime != null">install_time = #{installTime},</if>
            <if test="deviceMaker != null">device_maker = #{deviceMaker},</if>
            <if test="deviceIntroduce != null">device_introduce = #{deviceIntroduce},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where device_id = #{deviceId}
    </update>

    <delete id="deleteIotDeviceByDeviceId" parameterType="Long">
        delete from iot_device where device_id = #{deviceId}
    </delete>

    <delete id="deleteIotDeviceByDeviceIds" parameterType="String">
        delete from iot_device where device_id in 
        <foreach item="deviceId" collection="array" open="(" separator="," close=")">
            #{deviceId}
        </foreach>
    </delete>
</mapper>
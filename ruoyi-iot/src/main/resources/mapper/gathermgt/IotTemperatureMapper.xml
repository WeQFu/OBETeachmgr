<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.iotmgr.gathermgt.mapper.IotTemperatureMapper">
    
    <resultMap type="IotTemperature" id="IotTemperatureResult">
        <result property="tempId"    column="temp_id"    />
        <result property="tempValue"    column="temp_value"    />
        <result property="deviceId"    column="device_id"    />
        <result property="deviceName"    column="device_name"    />
        <result property="gatherArea"    column="gather_area"    />
        <result property="gatherTime"    column="gather_time"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectIotTemperatureVo">
        select temp_id, temp_value, device_id, device_name, gather_area, gather_time, del_flag, create_by, create_time, update_by, update_time, remark from iot_temperature
    </sql>

    <select id="selectIotTemperatureList" parameterType="IotTemperature" resultMap="IotTemperatureResult">
        <include refid="selectIotTemperatureVo"/>
        <where>  
            <if test="tempValue != null "> and temp_value = #{tempValue}</if>
            <if test="deviceId != null "> and device_id = #{deviceId}</if>
            <if test="deviceName != null  and deviceName != ''"> and device_name like concat('%', #{deviceName}, '%')</if>
            <if test="gatherArea != null  and gatherArea != ''"> and gather_area = #{gatherArea}</if>
            <if test="gatherTime != null "> and gather_time = #{gatherTime}</if>
        </where>
    </select>
    
    <select id="selectIotTemperatureByTempId" parameterType="Long" resultMap="IotTemperatureResult">
        <include refid="selectIotTemperatureVo"/>
        where temp_id = #{tempId}
    </select>
        
    <insert id="insertIotTemperature" parameterType="IotTemperature" useGeneratedKeys="true" keyProperty="tempId">
        insert into iot_temperature
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="tempValue != null">temp_value,</if>
            <if test="deviceId != null">device_id,</if>
            <if test="deviceName != null">device_name,</if>
            <if test="gatherArea != null">gather_area,</if>
            <if test="gatherTime != null">gather_time,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="tempValue != null">#{tempValue},</if>
            <if test="deviceId != null">#{deviceId},</if>
            <if test="deviceName != null">#{deviceName},</if>
            <if test="gatherArea != null">#{gatherArea},</if>
            <if test="gatherTime != null">#{gatherTime},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateIotTemperature" parameterType="IotTemperature">
        update iot_temperature
        <trim prefix="SET" suffixOverrides=",">
            <if test="tempValue != null">temp_value = #{tempValue},</if>
            <if test="deviceId != null">device_id = #{deviceId},</if>
            <if test="deviceName != null">device_name = #{deviceName},</if>
            <if test="gatherArea != null">gather_area = #{gatherArea},</if>
            <if test="gatherTime != null">gather_time = #{gatherTime},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where temp_id = #{tempId}
    </update>

    <delete id="deleteIotTemperatureByTempId" parameterType="Long">
        delete from iot_temperature where temp_id = #{tempId}
    </delete>

    <delete id="deleteIotTemperatureByTempIds" parameterType="String">
        delete from iot_temperature where temp_id in 
        <foreach item="tempId" collection="array" open="(" separator="," close=")">
            #{tempId}
        </foreach>
    </delete>
</mapper>